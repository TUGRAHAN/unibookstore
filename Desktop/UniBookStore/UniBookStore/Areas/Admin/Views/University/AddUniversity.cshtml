
@{
    ViewBag.Title = "AddUniversity";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

@model University

@section styles{
    <link href="~/Content/Admin/CustomCss/Validation.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-success">
            <div class="panel-heading">
             <h3 style="text-align:center">Universite Ekleme Alanı</h3>
            </div>
            <div class="panel-body">
                @if (ViewBag.Error == true)
                {
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>                    Gerekli tüm alanları doldurunuz.
                    </div>

                }
                else if (ViewBag.Error == false)
                {
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>                    Universite başarılı bir şekilde eklendi.
                    </div>
                }

                @if (ViewBag.NameError == true)
                {
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>                    Ilgili tip ve derste bu isimde bir universite mevcut.
                    </div>
                }

                @using (Html.BeginForm())
                {
                    @Html.DropDownList("MainTypeID", (List<SelectListItem>)ViewData["mainType"], "Seçiniz")
                    <br />
                    <br />
                    @Html.DropDownList("CourseID", (List<SelectListItem>)ViewData["course"], "Seçiniz")
                    <br />
                    <br />
                    Html.RenderPartial("Partials/_addUniversityForm", Model);
                    <br />
                    <input type="submit" value="Ekle" class="btn btn-success" />
                }
            </div>
        </div>
    </div>
    <!-- /.col-lg-4 -->
</div>

