
@{
    ViewBag.Title = "UpdateCourse";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

@model Course

@section styles{
    <link href="~/Content/Admin/CustomCss/Validation.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Ders Güncelleme Sayfası</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                Ders Güncelleme Alanı
            </div>
            <div class="panel-body">
                @if (ViewBag.Error == true)
                {
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>                    Gerekli tüm alanları doldurunuz.
                    </div>

                }
                else if (ViewBag.Error == false)
                {
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>                    Ders başarılı bir şekilde güncellendi.
                    </div>  
                }

                @if (ViewBag.NameError == true)
                {
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>                    Ilgili tipte bu isimde bir ders mevcut.
                    </div>
                }

                @using (Html.BeginForm())
                {
                    @*@Html.DropDownList("MainTypeID", (List<SelectListItem>)ViewData["mainType"], "Seçiniz")*@

                    @Html.DropDownListFor(x => x.MainTypeID,null,new { @class = "form-control" })
                    <br />
                    <br />
                    Html.RenderPartial("Partials/_addCourseForm", Model);
                    <br />
                    <input type="submit" value="Güncelle" class="btn btn-success" />
                }
            </div>


        </div>
    </div>
    <!-- /.col-lg-4 -->
</div>




